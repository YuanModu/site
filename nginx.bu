variant: fcos
version: 1.4.0
storage:
  files:
    - path: /etc/containers/systemd/nginx.container
      overwrite: true
      contents:
        inline: |
          [Unit]
          Description=Nginx Service
          Wants=network-online.target
          After=network-online.target

          [Container]
          ContainerName=nginx
          Image=docker.io/nginx
          PublishPort=80:80

          [Install]
          WantedBy=multi-user.target
